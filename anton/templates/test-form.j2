{% extends "base.j2" %}

{% macro render_input(field) %}
  <label>
    {{ field.label.text }}
    {{ field(size=32, placeholder=field.label.text) }}
  </label>
  {% for error in field.errors %}
    <span style="color: red;">{{ error }}</span>
  {% endfor %}
{% endmacro %}

